%h2 Besitz

.row
  .col-sm-6
    .weapon-box
      %h3
        Waffen
      .weapon-info
        .row
          .col-sm-8
            %small Name
          .col-sm-4
            %small Stein
        %div{"ng-class" => "{disabled: disabled}", "ng-repeat" => "weapon in fkWeapons"}
          .row
            .col-sm-8
              {{weapon.name}}
            .col-sm-4
              %small {{weapon.weight}}
        %div{"ng-class" => "{disabled: disabled}", "ng-repeat" => "weapon in nkWeapons"} 
          .row
            .col-sm-8
              {{weapon.name}}
            .col-sm-4
              %small {{weapon.weight}}
  .col-sm-6
    .weapon-box
      %h3
        Rüstung
        %small gesammt: {{armory.overall}}
      .weapon-info
        .row
          .col-sm-5
            %small Name
          .col-sm-3
            %small Stein
          .col-sm-2
            %small RS
          .col-sm-2
            %small BE
        %div{"ng-repeat" => "armor in armory.components"}
          .row
            .col-sm-5
              {{armor.name}}
            .col-sm-3
              %small {{armor.weight}}
            .col-sm-2
              %small {{armor.value}}
            .col-sm-2
              %small {{armor.handicap}}

.row
  .col-sm-8
    .weapon-box
      %h3
        Ausrüstung
        %small
          getragen
      .weapon-info
        .row
          .col-sm-7
            %small Name
          .col-sm-1
            %small Stein
          .col-sm-1
            %small Anz.
          .col-sm-3
            %small Type
        %div{"ng-repeat" => "stuff in stuffBaggage"}
          .row
            .col-sm-7
              {{stuff.name}}
            .col-sm-1
              %small {{stuff.weight}}
            .col-sm-1
              %small {{stuff.amount}}
            .col-sm-3
              %small {{stuff.type}}
  .col-sm-4
    .weapon-box
      %h3
        Geld
      .weapon-info
        %div{"ng-repeat" => "(couns, value) in money"}
          .row
            .col-sm-6
              {{couns}}
            .col-sm-6
              {{value}}

